<div id="person">
	<h2><span><%= @person.name %></span> <%= department_for @person %></h2>
	
	<div class="description">
	 
   	</div>

	<div class="connections">
		<ul>
		<% @person.connections.each do |c| -%>
			<li>
				<h4><%= link_to c.person(@person).name, c.person(@person) %></h4>
				<span class="meta"><%= c.description %> in July 2011 - <% if c.source == 'url' -%><% link_to 'source', c.source_url %><% elsif c.source == 'data' %>from dataset<% end %></span>
			</li>
		<% end -%>
		</ul>
	</div>
</div>