<div id="person">
	<h2><span><%= @person.name %></span> <%= department_for @person %></h2>
	
	<div class="description">
	 
   	</div>

	<div class="connections">
		<ul>
		<% @person.connections.each do |c| -%>
			<li>
				<h4><%= link_to c.person(@person).name, c.person(@person) %></h4>
				<span class="meta"><%= (c.description?) ? "#{c.description} - in" : "" %> <%= c.date.strftime("%B %Y") %> - <% if c.source == 'url' -%><% link_to 'source', c.source_url %><% elsif c.source == 'data' %>from dataset<% end %> <%= link_to "edit", edit_person_connection_url(c.person1, c) %></span>
			</li>
		<% end -%>
		</ul>
	</div>
	
	<div class="add_connection">
		<%= link_to 'Add a connection', new_person_connection_url(@person) %>
	</div>
</div>