<%= form_for @company do |f| %>
	
	<p>
		<%= f.label :name, "Name" %>
		<%= f.text_field :name %>	
	</p>                            
	
	<p>
		<%= f.label :description, "Description" %>
		<%= f.text_field :description %>	
	</p>                                    
	
	<p>
		<%= f.submit "Save" %>
	</p>
	
<% end %>