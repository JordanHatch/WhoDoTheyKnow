<%= form_for([@person,@connection]) do |f| %>
	
	<% if mode == 'new' %>
	<p>
		<%= f.label :person2_id, "#{@person.name} to:" %>
	    <%= f.collection_select :person2_id, @people, :id, :name %> <%= link_to "new person", new_person_url %>
    </p>                                  
    <% end %>

	<p>
		<%= f.label :date, "Date" %>
		<%= f.text_field :date %>
	</p>                      
	
	<p>
		<%= f.label :date_accuracy, "Date Accuracy" %>
		<%= f.select( :date_accuracy, [ ['day','day'], ['month','month'] ]) %>
	</p>
	
	<p>
		<%= f.label :description, "Description" %>
		<%= f.text_field :description %>
	</p>                                                                      
	
	<p>
		<%= f.label :source, "Source" %>
		<%= f.select( :source, [ ['data','data'], ['url', 'url'] ])%>
	</p>                                                          
	
	<p>
		<%= f.label :source_url, "Source URL" %>
		<%= f.text_field :source_url %>
	</p>                            
	
	<p>
		<%= f.submit "Save" %>
	</p>

<% end %>